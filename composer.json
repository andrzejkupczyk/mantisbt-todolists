{
    "name": "andrzejkupczyk/mantis-todolists",
    "description": "To-Do Lists Plugin for Mantis Bug Tracker",
    "type": "mantisbt-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Kupczyk",
            "email": "kontakt@andrzejkupczyk.pl"
        }
    ],
    "support": {
        "issues": "https://github.com/andrzejkupczyk/mantis-todolists/issues"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mantisbt/mantisbt"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mantisbt/securimage"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "mantisbt/mantisbt": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Mantis\\ToDoLists\\": "src"
        }
    },
    "scripts": {
        "analyse": "@fix --dry-run",
        "fix": "@php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --diff"
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "platform": {
            "php": "7.0.0"
        }
    },
    "minimum-stability": "dev"
}
